            </ListView>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <Button
                Grid.Column="0"
                Content="ADD ITEM"
                Margin="25, 0, 0, 0"
                Name="btnAdd"
                Width="auto"
                Style="{DynamicResource MaterialDesignRaisedDarkButton}"
                Click="BtnAdd_Click"/>

                <Button
                Grid.Column="1"
                Content="RANDOMIZE"
                Name="btnRandomize"
                Width="auto"
                Margin="20"
                Style="{DynamicResource MaterialDesignRaisedAccentButton}"
                Click="RandomizeButton_Click"/>
            </Grid>

        </Grid>

        <Grid x:Name="Overlay" Background="#80000000" Visibility="Collapsed" Grid.ColumnSpan="2">
            <ProgressBar Width="200" Height="20" IsIndeterminate="True" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
