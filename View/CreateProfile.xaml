            </TabItem>

            <TabItem Header="Map Skin">
                <Grid>
                    <ListBox 
                        ItemsSource="{Binding MapSkins}"
                        SelectedItem="{Binding SelectedMapSkin}"
                        SelectionMode="Single"
                     >
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="{Binding ItemId}" Visibility="Hidden"/>


                                    <TextBlock 
                                        Grid.Row="0"
                                        Text="{Binding Name}" 
                                        HorizontalAlignment="Center"/>

                                    <Image 
                                        Grid.Row="1"
                                        Source="{Binding Image}"
                                        Width="100" 
                                        Height="100" 
                                        Margin="5" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>

            <TabItem Header="Damage Skin">
                <Grid>
                    <ListBox 
                        ItemsSource="{Binding DamageSkins}"
                        SelectedItem="{Binding SelectedDamageSkin}"
                        SelectionMode="Single"
                     >
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
