                        </ListBox.ItemTemplate>

                        <ListBoxItem>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="110"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                        Grid.Row="0"
                                           TextWrapping="Wrap"
                                        Text="NomeAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" 
                                        HorizontalAlignment="Center"/>

                                <Canvas Grid.Row="1" Grid.Column="0">

                                    <Image 
                                        Width="100" 
                                        Source="C:\Users\iankl\Pictures\tooltip_tft_avatar_blue.png"
                                        Height="100"/>

                                    <Image                       
                                        Width="65"
                                        Canvas.Top="68"
                                        Source="\Assets\Plating\Default.png"
                                        Canvas.Left="19"
                                        >
                                    </Image>

                                </Canvas>

                            </Grid>
                        </ListBoxItem>
                    </ListBox>-->
                </Grid>

            </TabItem>

            <TabItem Header="Map Skin">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>

                        </Grid.ColumnDefinitions>

                        <TextBlock 
                            Margin="20 0 0 0"
                            Grid.Column="0"
                            Text="Order by: "
                            FontSize="20"
                            Foreground="White"/>

                        <Button 
                            Grid.Column="1" 
                            Content="Name" 
                            Margin="20 0 0 0"
                            Command="{Binding SortMapSkinsNameCommand}" />

                        <Button 
                            Grid.Column="2" 
                            Content="Rarity" 
                            Margin="20 0 0 0"
                            Command="{Binding SortMapSkinsRarityCommand}" />
                    </Grid>

                    <ListBox 
                        Grid.Row="1"
                        x:Name="mapSkinsListBox"
                        Margin="20 20 20 20"
                        ItemsSource="{Binding MapSkins}"
                        SelectionMode="Multiple"
                        SelectionChanged="MapSkinListBox_SelectionChanged"
                     >

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="BorderBrush" Value="Red" />
                                        <Setter Property="BorderThickness" Value="2" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="110"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock 
                                        Text="{Binding ItemId}"
                                        Visibility="Hidden"/>

                                    <TextBlock 
                                        Grid.Column="0"
                                        Grid.Row="0"
                                        TextWrapping="Wrap"
                                        Text="{Binding Name}" 
                                         VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center"/>

                                    <Canvas 
                                        Grid.Row="1" 
                                        Grid.Column="0">

                                        <Image 
                                            Width="100" 
                                            Source="{Binding Image}"
                                            Height="100"/>

                                        <Image                       
                                            Width="65"
                                            Canvas.Top="85"
                                             Source="{Binding PlatingImage}"
                                            Canvas.Left="19">
                                        </Image>

                                    </Canvas>
                                </Grid>

                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

            </TabItem>

            <TabItem Header="Damage Skin">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>

                        </Grid.ColumnDefinitions>

                        <TextBlock 
                            Margin="20 0 0 0"
                            Grid.Column="0"
                            Text="Order by: "
                            FontSize="20"
                            Foreground="White"/>

                        <Button 
                            Grid.Column="1" 
                            Content="Name" 
                            Margin="20 0 0 0"
                            Command="{Binding SortDamageSkinsNameCommand}" />

                        <Button 
                            Grid.Column="2" 
                            Content="Rarity" 
                            Margin="20 0 0 0"
                            Command="{Binding SortDamageSkinsRarityCommand}" />
                    </Grid>

                    <ListBox 
                        Grid.Row="1"
                        Margin="20 20 20 20"
                        x:Name="damageSkinsListBox"
                        ItemsSource="{Binding DamageSkins}"
                        SelectionMode="Multiple"
                        SelectionChanged="DamageSkinsListBox_SelectionChanged"
                     >

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                                        <Setter Property="BorderBrush" Value="Red" />
                                        <Setter Property="BorderThickness" Value="2" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="110"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock 
                                        Text="{Binding ItemId}"
                                        Visibility="Hidden"/>

                                    <TextBlock 
                                        Grid.Column="0"
                                        Grid.Row="0"
                                        Text="{Binding Name}" 
                                        TextWrapping="Wrap"
                                        VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center"/>

                                    <Canvas 
                                        Grid.Row="1" 
                                        Grid.Column="0">

                                        <Image 
                                            Width="100" 
                                            Source="{Binding Image}"
                                            Height="100"/>

                                        <Image                       
                                            Width="65"
                                            Canvas.Top="85"
                                             Source="{Binding PlatingImage}"
                                            Canvas.Left="19">
                                        </Image>

                                    </Canvas>
                                </Grid>

                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>

        </TabControl>

        <Grid Grid.Row="3" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Content="CANCEL"
                Name="btnCancel"
                HorizontalAlignment="Right"
                Margin="20"
                Width="100"
                 Style="{DynamicResource MaterialDesignRaisedAccentButton}"
                Click="BtnCancel_Click"/>

            <Button
                Grid.Column="1"
                Content="SAVE"
                Name="btnSave"
                HorizontalAlignment="Right"
                Margin="20"
                Width="100"
                Style="{DynamicResource MaterialDesignRaisedDarkButton}"
                Click="BtnSave_Click"/>

        </Grid>


        <Grid x:Name="Overlay" Background="#80000000" Visibility="Collapsed" Grid.ColumnSpan="2">
            <ProgressBar Width="200" Height="20" IsIndeterminate="True" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Grid>
    </Grid>
</Window>
